// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      UserRole @default(ADMIN)
  university String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  certificates Certificate[]
}

model Certificate {
  id            String            @id @default(cuid())
  certificateId String            @unique
  hash          String            @unique
  recipientName String
  email         String
  course        String
  matricNo      String
  issueDate     DateTime
  expiryDate    DateTime?
  status        CertificateStatus @default(PENDING)
  issuedAt      DateTime?
  template      String?           // Store the selected template (classic, modern, corporate, harvard)
  signatoryLeft String?           // Left signature
  signatoryRight String?          // Right signature
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("certificates")
}

enum UserRole {
  ADMIN
  USER
}

enum CertificateStatus {
  PENDING
  ISSUED
  VERIFIED
  REVOKED
}
